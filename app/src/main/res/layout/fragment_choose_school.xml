<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <data>

        <variable
            name="viewmodel"
            type="com.edupay.edupay.viewmodel.BusinessViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.Fragments.ChooseSchoolFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/signupLayout">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="20dp"
                android:text="@string/edupay"
                android:textColor="@color/colorPrimaryDark"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="20dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_layout_shoolid"
                app:layout_constraintLeft_toLeftOf="@id/logo"
                app:layout_constraintTop_toBottomOf="@id/logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="16dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_schoolid"
                    android:layout_width="match_parent"
                    app:endIconDrawable="@drawable/ic_keyboard_arrow_down_24dp"
                    android:layout_height="wrap_content"
                    android:hint="Enter School ID"/>
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/input_layout_school_session"
                app:layout_constraintLeft_toLeftOf="@id/logo"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:text="Choose session"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:drawableRight="@drawable/ic_keyboard_arrow_down_24dp"
                android:background="@color/colorMilk"
                android:layout_marginTop="16dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:layout_constraintTop_toBottomOf="@id/input_layout_shoolid">
<!--                <com.google.android.material.textfield.TextInputEditText-->
<!--                    android:id="@+id/input_period"-->
<!--                    android:layout_width="match_parent"-->
<!--                    app:endIconDrawable="@drawable/ic_keyboard_arrow_down_24dp"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:hint="Choose Fee Period"/>-->
            </com.google.android.material.textview.MaterialTextView>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/input_layout_class"
                app:layout_constraintLeft_toLeftOf="@id/logo"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:text="Choose Class"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="16dp"
                android:drawableRight="@drawable/ic_keyboard_arrow_down_24dp"
                android:background="@color/colorMilk"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:layout_constraintTop_toBottomOf="@id/input_layout_school_session">

<!--                <com.google.android.material.textfield.TextInputEditText-->
<!--                    android:id="@+id/input_class"-->
<!--                    android:inputType="textAutoComplete"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:enabled="false"-->
<!--                    app:endIconDrawable="@drawable/ic_keyboard_arrow_down_24dp"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:hint="Choose Class"-->
<!--                    />-->
            </com.google.android.material.textview.MaterialTextView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/loginBtn"
                android:layout_width="343dp"
                android:layout_height="56dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="@dimen/dimen_24"
                android:layout_marginEnd="@dimen/dimen_8"
                android:background="@color/colorPrimary"
                android:backgroundTint="@color/colorPrimary"
                android:text="NEXT"
                android:textStyle="bold"
                app:cornerRadius="@dimen/dimen_8"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorWhite"
                app:layout_constraintLeft_toLeftOf="@id/signupLayout"
                app:layout_constraintRight_toRightOf="@id/signupLayout"
                app:layout_constraintTop_toBottomOf="@id/input_layout_class"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="@dimen/dimen_8" />


            <com.github.ybq.android.spinkit.SpinKitView
                android:id="@+id/spin_kit"
                style="@style/SpinKitView.Small.FadingCircle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="invisible"
                app:SpinKit_Color="@color/colorWhite"
                android:elevation="@dimen/dimen_8"
                app:layout_constraintRight_toLeftOf="@id/loginBtn"
                app:layout_constraintTop_toTopOf="@+id/loginBtn"
                app:layout_constraintBottom_toBottomOf="@+id/loginBtn"
                android:layout_marginLeft="@dimen/margin"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>