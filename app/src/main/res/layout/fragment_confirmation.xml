<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <data>

        <variable
            name="viewmodel"
            type="com.edupay.edupay.viewmodel.BusinessViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.Fragments.ConfirmationFragment">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/page_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:text="@string/confirmation_page"
            android:textSize="@dimen/twenty_sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/fee_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            app:cardElevation="@dimen/dimen_8"
            android:layout_margin="30dp"
            app:layout_constraintTop_toBottomOf="@id/page_title">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/fee_title"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:text="SCHOOL FEE"
                    android:background="@color/colorAccent"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="bold">
                </com.google.android.material.textview.MaterialTextView>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/fee_amount"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="N 40000"
                    android:background="@color/colorPrimaryDark"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp"
                    android:textStyle="bold">
                </com.google.android.material.textview.MaterialTextView>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/student_name_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Student name"
                    android:background="@color/colorWhite"
                    android:textSize="15sp"
                    android:padding="15dp"
                    android:textStyle="bold">
                </com.google.android.material.textview.MaterialTextView>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/student_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Mark Essien"
                    android:textColor="#000000"
                    android:background="@color/colorMilk"
                    android:textSize="15sp"
                    android:padding="15dp"
                    android:textStyle="bold">
                </com.google.android.material.textview.MaterialTextView>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/student_id_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Student ID"
                    android:background="@color/colorWhite"
                    android:textSize="15sp"
                    android:padding="15dp"
                    android:textStyle="bold">
                </com.google.android.material.textview.MaterialTextView>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/student_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="56HGLKJHIO"
                    android:textColor="#000000"
                    android:background="@color/colorMilk"
                    android:textSize="15sp"
                    android:padding="15dp"
                    android:textStyle="bold">
                </com.google.android.material.textview.MaterialTextView>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/parent_name_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Parent name"
                    android:background="@color/colorWhite"
                    android:textSize="15sp"
                    android:padding="15dp"
                    android:textStyle="bold">
                </com.google.android.material.textview.MaterialTextView>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/parent_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Mr Mark Johnson"
                    android:textColor="#000000"
                    android:background="@color/colorMilk"
                    android:textSize="15sp"
                    android:padding="15dp"
                    android:textStyle="bold">
                </com.google.android.material.textview.MaterialTextView>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/parent_email_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Parent Email"
                    android:background="@color/colorWhite"
                    android:textSize="15sp"
                    android:padding="15dp"
                    android:textStyle="bold">
                </com.google.android.material.textview.MaterialTextView>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/parent_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="olifedayo94@gmail.com"
                    android:textColor="#000000"
                    android:background="@color/colorMilk"
                    android:textSize="15sp"
                    android:padding="15dp"
                    android:textStyle="bold">
                </com.google.android.material.textview.MaterialTextView>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/submitBtn"
            android:layout_width="343dp"
            android:layout_height="56dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="@dimen/dimen_24"
            android:layout_marginEnd="@dimen/dimen_8"
            android:background="@color/colorPrimaryDark"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="@string/make_payment"
            android:textStyle="bold"
            app:cornerRadius="@dimen/dimen_8"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/colorWhite"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fee_card"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="@dimen/dimen_8" />

        <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/spin_kit"
            style="@style/SpinKitView.Small.FadingCircle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:SpinKit_Color="@color/colorPrimary"
            app:layout_constraintRight_toLeftOf="@id/submitBtn"
            app:layout_constraintTop_toTopOf="@id/submitBtn"
            app:layout_constraintBottom_toBottomOf="@id/submitBtn"
            android:layout_marginLeft="@dimen/margin"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>