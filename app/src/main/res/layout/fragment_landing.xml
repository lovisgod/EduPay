<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <data>

        <variable
            name="viewmodel"
            type="com.edupay.edupay.viewmodel.BusinessViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.Fragments.LandingFragment">

     <com.google.android.material.textview.MaterialTextView
         android:id="@+id/header_fee"
         android:layout_width="300dp"
         android:layout_height="50dp"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintLeft_toLeftOf="parent"
         app:layout_constraintRight_toRightOf="parent"
         android:layout_marginTop="60dp"
         android:textSize="@dimen/twenty_sp"
         android:gravity="center"
         android:textColor="@color/colorWhite"
         android:background="@color/colorPrimary"
         android:textStyle="bold"
         android:text="Fee Payment for Basic 1 \n First Term   2020/2021 Session">
     </com.google.android.material.textview.MaterialTextView>

     <androidx.recyclerview.widget.RecyclerView
         android:id="@+id/fee_lists"
         android:layout_width="match_parent"
         android:layout_height="0dp"
         app:layout_constraintTop_toBottomOf="@+id/header_fee"
         app:layout_constraintBottom_toBottomOf="parent"
         android:layout_margin="@dimen/dimen_8"
         tools:listitem="@layout/fee_item">
     </androidx.recyclerview.widget.RecyclerView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>