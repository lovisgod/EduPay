<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <data>

        <variable
            name="viewmodel"
            type="com.edupay.edupay.viewmodel.BusinessViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.Fragments.HistoryFragment">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/history_header"
            android:layout_width="120dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="70dp"
            app:layout_constraintRight_toLeftOf="@+id/pay_header"
            android:layout_marginTop="60dp"
            android:textSize="@dimen/twenty_sp"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:background="@color/colorPrimary"
            android:textStyle="bold"
            android:text="HISTORY">
        </com.google.android.material.textview.MaterialTextView>


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/pay_header"
            android:layout_width="120dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/history_header"
            android:layout_marginTop="60dp"
            android:layout_marginRight="@dimen/fifty_dp"
            android:textSize="@dimen/twenty_sp"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:background="@color/colorMilk"
            android:textStyle="bold"
            android:text="PAY">
        </com.google.android.material.textview.MaterialTextView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fee_lists"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/history_header"
            android:layout_marginTop="@dimen/dimen_8"
            android:layout_marginRight="@dimen/dimen_8"
            android:layout_marginLeft="@dimen/dimen_8"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:listitem="@layout/fee_history_item">
        </androidx.recyclerview.widget.RecyclerView>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/pay_fee_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="@dimen/fab_margin"
            android:layout_marginRight="@dimen/fab_margin"
            android:backgroundTint="@color/colorPrimaryDark"
            android:background="@color/colorPrimaryDark"
            app:layout_constraintBottom_toBottomOf="parent"
            android:drawableTop="@drawable/ic_add_24dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="@dimen/fab_margin">
        </com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>